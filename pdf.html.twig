<table id="customers">

    <tr>

        <th>Id</th>

        <th>title  </th>

        <th>picture</th>

        <th>type</th>

        <th>description</th>

        <th>localisation</th>


    </tr>
    </thead>
    <tbody>
    {% for user in event %}

            <tr>
                <td>{{ user.id }}</td>


                <td>{{ user.title }}</td>
                <td>
                    <img src="{{ asset('/images/'~user.picture) }}" >
                </td>

                <td>{{ user.type }}</td>
                <td>{{ user.description}}</td>
                <td>{{ user.localisation }}</td>

            </tr>


    {% endfor %}
    </tbody>
</table>
