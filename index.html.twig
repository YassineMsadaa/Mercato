{% extends 'index/index.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block body %}
    <h1>Liste Reclamation</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Body</th>
                <th>Subject</th>
                <th>UserId</th>
                <th>Date</th>
                <th>Etatprobleme</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for reclamation in reclamations %}
            <tr>
                <td>{{ reclamation.id }}</td>
                <td>{{ reclamation.title }}</td>
                <td>{{ reclamation.body }}</td>
                <td>{{ reclamation.subject }}</td>
                <td>{{ reclamation.userId }}</td>
                <td>{{ reclamation.date ? reclamation.date|date('Y-m-d') : '' }}</td>
                <td>{{ reclamation.etatprobleme }}</td>
                <td>
                    <a href="{{ path('reclamation_show', {'id': reclamation.id}) }}">
                        <p class="footer_contact-form-submit topmargin_30">
                            <button type="submit" id="footer_contact_form_submit" name="contact_submit" class="theme_button color1 wide_button">Afficher</button>
                        </p>
                    </a>
                    <a href="{{ path('reclamation_edit', {'id': reclamation.id}) }}">
                        <p class="footer_contact-form-submit topmargin_30">
                            <button type="submit" id="footer_contact_form_submit" name="contact_submit" class="theme_button color1 wide_button">Modifier</button>
                        </p>
                    </a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('reclamation_new') }}">
        <p class="footer_contact-form-submit topmargin_30">
            <button type="submit" id="footer_contact_form_submit" name="contact_submit" class="theme_button color1 wide_button">Ajouter une reclamation</button>
        </p>
    </a>
{% endblock %}
